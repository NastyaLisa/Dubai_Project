{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": { "jsx": true }
    },
    "plugins": ["react"],
    "ignorePatterns": "webpack.config.js",
  
    "rules": {
      "no-unused-vars": "warn",
      "react/prop-types": 0,
      "quotes": ["warn", "single"],
      "jsx-quotes": ["warn", "prefer-double"],
      "prefer-const": "error",
      "indent": ["warn", 2],
      "comma-dangle": ["warn", "always-multiline"],
      "semi": ["warn", "always"] 
    }
  }
  